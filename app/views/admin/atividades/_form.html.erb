<div class="section evt-form">
  <%= simple_form_for @atividade do |f| %>
    <%= f.input :nome, input_html: { class: 'form-control'}, label_html: { class: 'label label_b'}  %>
    <%#= f.input :professor, label: "Professor(a)/Responsável", input_html: { class: 'form-control'}, label_html: { class: 'label label_b'}  %>
    <%= f.association :voluntarios, label: "Professor(a)/Responsável", :collection => @voluntarios.order('nome ASC'), :label_method => :nome,
    :value_method => :id, input_html: {class: 'form-control', style: 'width: 100%; '}, label_html: { class: 'label label_b'} %><br>

    <%= f.input :horario, label: "Horário", input_html: { class: 'form-control'}, label_html: { class: 'label label_b'} %>
    <%= f.input :dias_semana, label: "Dias da semana", input_html: { class: 'form-control'}, label_html: { class: 'label label_b'} %>
    <%= f.button :submit, class: "btn btn-primary btn-criar"%>
    <%= link_to 'Voltar', :back, class: "btn btn-outline-secondary" %>
  <% end %>
<div>

  <!-- Script para habilitar o multiselect no campo "Atividades" -->
  <script>
    $(function() {
      $('#multiselect2').multipleSelect({
      selectAll: false
    })
    })
  </script>
