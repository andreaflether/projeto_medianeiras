<h1 class="h1-evt">Página inicial - Eventos</h1>
<br>
<container>
<!-- Tabela de eventos -->
<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th>Nome</th>
      <th>Data</th>
      <th>Hora</th>
      <th>Local</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @eventos.each do |evento| %>
      <tr>
        <td><%= evento.nome %></td>
        <td><%= l evento.data, format: :long %></td>
        <td><%= evento.hora %></td>
        <td><%= evento.local %></td>
        <td><%= evento.descricao %></td>
        <td><%= link_to 'Ver', evento, class: 'btn btn-info' %></td>
        <td><%= link_to 'Editar', edit_evento_path(evento), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Apagar', evento_path(evento), class: 'btn btn-danger', method: :delete, data: { confirm: 'Tem certeza que deseja apagar o evento selecionado?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</container>
