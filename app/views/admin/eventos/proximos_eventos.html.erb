<h1 class="h1-evt">Próximos eventos</h1>
<br>

<div class="container">

  <!-- <h3 class="admin-title-evt"><b><%= l Date.today, format: :month_only %></b></h3> -->

  <% if @proximos_eventos.blank? %>
    <h5 class="mt-3 text-center">Não há eventos agendados para este mês.<h5>
  <% end %>

  <% @proximos_eventos.order(data: :asc, hora: :asc).each do |evento| %>
      <div class="row mb-2">
        <div class="col-md-2">
          <h3><span class="badge badge-primary"><%= l evento.data, format: :day_month %></span></h3>
        </div>
        <div class="col-md-10">
            <h4><strong><%= evento.nome %></strong></h4>
            <em><%= evento.local %></em> - <%= evento.hora %> <br>
            <span class="small"><%= evento.descricao %></span>
        </div>
      </div>
    <br>

  <% end %>
</div>

<%#= l evento.data, format: :short %>
