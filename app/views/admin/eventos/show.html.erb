<div class="card-deck">
      <div class="card mb-2">
        <div class="card-header card-text-tit">
          <%= @evento.nome.titleize%>
        </div>
        <div class="card-body">
          <p class="card-text card-bigger"><i class="far fa-calendar-alt c-icon"></i><b><%= l @evento.data, format: :long %></b> Ã s <%= @evento.hora %></p>
          <p class="card-text"><%= @evento.descricao.capitalize %></p>
          <p class="card-text"><i class="fas fa-map-marker-alt c-icon"></i><%= @evento.local.titleize %></p>

          <%= link_to 'Criar novo evento', new_evento_path, class: 'btn btn-outline-success btn-next' %>
          <%= link_to 'Editar', edit_evento_path(@evento), class: 'btn btn-outline-primary btn-next' %>
          <%= link_to 'Apagar', evento_path(@evento), class: 'btn btn-outline-danger btn-next', method: :delete, data: { confirm: 'Tem certeza que deseja apagar o evento selecionado?' } %>
        </div>
      </div>
</div>
