<div class="container admin-txt-top">
  <br>
  <h4 class="text-center admin-txt">Olá, <span class="admin-welcome text-primary"><%= current_user.name.titleize %></span>!</h4>
  <br>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text bg-input-group" id="basic-addon1"><i class="fas fa-user-alt text-light"></i></span>
    </div>
    <li class="list-group-item flex-fill"><b>Última pessoa cadastrada:</b> <%= link_to @pessoa.nome, @pessoa %></li>
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text bg-input-group" style="width: 43px;" id="basic-addon1"><i class="fas fa-tags text-light"></i></span>
    </div>
    <li class="list-group-item flex-fill"><b>Última atividade cadastrada:</b> <%= link_to @atividade.nome, @atividade %></li>
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text bg-input-group" id="basic-addon1"><i class="fas fa-id-card-alt text-light"></i></span>
    </div>
    <li class="list-group-item flex-fill"><b>Último voluntário cadastrado:</b> <%= link_to @voluntario.nome, @voluntario %></li>
  </div>

<br>

<div class="card-deck justify-content-center">

    <div class="card">
      <div class="card-body text-center">
        <div class="h1 m-0 text-primary"><%= link_to @pessoas, pessoas_path, class: "nmb-link" %></div>
        <div class="text-muted mb-3 mt-1">Pessoas cadastradas</div>
      </div>
    </div>

    <div class="card">
      <div class="card-body text-center">
        <div class="h1 m-0 text-primary"><%= link_to @atividades, atividades_path, class: "nmb-link" %></div>
        <div class="text-muted mb-3 mt-1">Total de atividades</div>
      </div>
    </div>

    <div class="card">
      <div class="card-body text-center">
        <div class="h1 m-0 text-primary"><%= link_to @voluntarios, voluntarios_path, class: "nmb-link" %></div>
        <div class="text-muted mb-3 mt-1">Voluntários cadastrados</div>
      </div>
    </div>

    <div class="card">
      <div class="card-body text-center">
        <div class="h1 m-0 text-primary"><%= link_to @eventos, admin_eventos_proximos_eventos_path, class: "nmb-link" %></div>
        <div class="text-muted mb-3 mt-1">Eventos em <%= l Date.today, format: :month_only %></div>
      </div>
    </div>
  </div>

<br>

<h3 class="mb-4 text-center mt-2">Aniversários - <%= l Date.today, format: :month_only %></h3>
  <% if @proximos_aniversarios.blank? %>
    <p class="b-day text-center mt-2 text-primary">Nenhum aniversário a ser exibido.</p>

  <% end %>
  <% @proximos_aniversarios.each do |pessoa| %>
    <% if pessoa.dt_nascimento.day == Date.today.day %>
      <div class="card mb-2">
        <div class="card-body">
          <span class="b-day"><i class="fas fa-birthday-cake text-primary"></i> <b><%= pessoa.dt_nascimento.day %></b> - <%= pessoa.nome %></span>
        </div>
      </div>
    <% else %>
    <div class="card mb-2">
      <div class="card-body">
        <span class="b-day"><b><%= pessoa.dt_nascimento.day %></b> - <%= pessoa.nome %></span>
      </div>
    </div>

    <% end %>
  <% end %>

</div>
