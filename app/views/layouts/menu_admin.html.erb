<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/8d9d868ad3.js" crossorigin="anonymous"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <title>Medianeiras - Admin</title>
</head>

<body>
  <div class="d-flex" id="wrapper">
    <!-- Sidebar -->
    <div class="bg-light border-right" id="sidebar-wrapper">
      <div class="sidebar-heading admin-menu-title">Medianeiras Admin </div>
      <div class="list-group list-group-flush">
        <a href="/admin" class="list-group-item list-group-item-action bg-light">Início</a>
        <span class="list-group-item tsts">Eventos</span>
        <a href="/admin/eventos/novo" class="list-group-item list-group-item-action bg-light">Criar novo evento</a>
        <a href="/admin/eventos/calendario" class="list-group-item list-group-item-action bg-light">Calendário</a>
        <a href="/admin/eventos/proximos_eventos" class="list-group-item list-group-item-action bg-light">Próximos eventos</a>
        <a href="/admin/eventos" class="list-group-item list-group-item-action bg-light">Ver todos os eventos</a>
        <span class="list-group-item tsts">Formulários</span>
        <a href="/admin/pessoas" class="list-group-item list-group-item-action bg-light">Ver todos</a>
        <a href="/admin/pessoas/novo" class="list-group-item list-group-item-action bg-light">Novo cadastro</a>
        <a href="/admin/atividades/novo" class="list-group-item list-group-item-action bg-light">Nova Atividade</a>
        <% if current_user.superadmin? %>
        <span class="list-group-item tsts">Usuários</span>
        <a href="/admin/users" class="list-group-item list-group-item-action bg-light">Gerenciar usuários</a>
        <% end %>
      </div>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">

      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <button class="btn btn-primary" id="menu-toggle"><i class="fas fa-arrows-alt-h"></i></button>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li class="nav-item">
              <span class="nav-link" href="#">Logado como <b><%= current_user.email %></b></span>
            </li>

            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Usuário
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to ('Preferências'), edit_user_registration_path, class: 'dropdown-item'%>

                <div class="dropdown-divider"></div>
                <%= link_to ('Sair'), destroy_user_session_path, class: 'dropdown-item', method: :delete %>
              </div>
            </li>
          </ul>
        </div>
      </nav>

      <div class="container-fluid">
        <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show mt-3 mb-3" role="alert">
          <%= alert %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <% end %>

        <% if notice %>
        <div class="alert alert-success alert-dismissible fade show mt-3 mb-3" role="alert">
          <%= notice %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <% end %>
        <%= yield %>

      </div>
    </div>
    <!-- /#page-content-wrapper -->

  </div>

  <!-- /#wrapper -->

  <!-- Bootstrap core JavaScript -->
  <!-- <script src="vendor/jquery/jquery.min.js"></script> -->
  <!-- <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script> -->

  <!-- Menu Toggle Script -->
  <script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
  </script>

  <!-- Alerts -->
  <script>
  $(".alert").fadeTo(4000, 500).slideUp(500, function(){
      $(".alert").alert('close');
      $(this).remove();
  });
  </script>

</body>

</html>
