<h3 class="title-txt text-center">Próximos eventos - <%= l Date.today, format: :month_only %></h3>
  <div class="container mt-4">
    <% if @proximos_eventos.blank? %>
    <h5 class="text-center">Não há eventos agendados para este mês.</h5>
    <% else %>
    <% @proximos_eventos.order(data: :asc, hora: :asc).limit(5).each do |evento| %>
    <div class="row justify-content-center mb-2">
      <div class="col-md-2">
        <h3><span class="badge badge-primary bl-color"><%= l evento.data, format: :day_month %></span></h3>
      </div>
      <div class="col-md-6">
        <h4><strong><%= evento.nome %></strong></h4>
        <em><%= evento.local %></em> - <%= evento.hora %> <br>
        <span class="small"><%= evento.descricao %></span>
      </div>
    </div>
    <br>
    <% end %>
  <% end %>
</div>

