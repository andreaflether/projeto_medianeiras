<h4 class="title-txt text-center">Próximos eventos</h4>

<div class="container">
  <div class="row justify-content-md-center">
    <% @proximos_eventos.order(data: :asc, hora: :asc).limit(4).each do |evento| %>
    <div class="col-md-6 mb-4">
      <div class="card-event my-auto" style="background-color: #f0f0f0; padding: 20px 20px; border-left: 5px solid #05afea;">
        <h5 class="align-middle"><b><%= evento.nome %> - <%= l evento.data, format: :complete_numbers %></b></h5>
        <p class="align-middle"><%= evento.descricao %> <br>
        <%= evento.local %></p>
      </div>
    </div>
    <% end %>
  </div>

  <div class="row justify-content-md-center justify-content-sm-center">
    <%= link_to 'Ver todos os eventos', pages_eventos_path, class: 'btn btn-outline-primary btn-all-events' %>
  </div>
</div>

